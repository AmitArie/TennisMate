    <TextView
        android:id="@+id/age_field"
        android:layout_width="102dp"
        android:layout_height="26dp"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="100dp"
        android:text="26"
        android:textAlignment="viewStart"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/level_field"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="26" />

    <TextView
        android:id="@+id/age_label"
        android:layout_width="102dp"
        android:layout_height="26dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:text="Age:"
        android:textAlignment="viewStart"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/level_label"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/age_field"
        tools:text="Age:" />

    <com.tennismate.tennismate.utilities.RoundedImageView
        android:id="@+id/profilePict"
        android:layout_width="369dp"
        android:layout_height="238dp"
        android:adjustViewBounds="true"
        android:background="@color/cardview_shadow_start_color"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/profile_pict_mock"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/fullName"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="18dp"
        android:fontFamily="cursive"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toTopOf="@+id/email_field"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePict"
        app:layout_constraintVertical_bias="1.0" />

    <Spinner
        android:id="@+id/level_field"
        android:layout_width="102dp"
        android:layout_height="26dp"
        android:entries="@array/activity_profile_rank_list"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="167dp"
        app:layout_constraintLeft_toRightOf="@+id/level_label"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.155" />

    <TextView
        android:id="@+id/email_field"
        android:layout_width="200dp"
        android:layout_height="26dp"
        android:text="Email"
        android:textSize="15sp"
        tools:text="Amit.arie@gmail.com"
        app:layout_constraintLeft_toRightOf="@+id/email_label"
        android:layout_marginLeft="48dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/age_field" />

    <TextView
        android:id="@+id/level_label"
        android:layout_width="102dp"
        android:layout_height="26dp"
        android:text="Level:"
        android:textSize="15sp"
        tools:text="Level:"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="167dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/email_label"
        android:layout_width="102dp"
        android:layout_height="26dp"
        android:text="Email:"
        android:textSize="15sp"
        tools:text="Email:"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/fullName"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/age_label"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintRight_toLeftOf="@+id/level_field"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toRightOf="@+id/level_label"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/level_field"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.757" />

