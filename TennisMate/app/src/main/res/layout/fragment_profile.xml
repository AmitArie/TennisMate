<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <!--Picture -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilePict"
            android:layout_width="227dp"
            android:layout_height="228dp"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            tools:layout_editor_absoluteX="79dp"
            tools:layout_editor_absoluteY="27dp" />
        </LinearLayout>

    <!--Full Name -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/fullName"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:fontFamily="cursive"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="273dp" />

    </LinearLayout>



    <!-- Email -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/email_label"
            android:layout_width="102dp"
            android:layout_height="26dp"
            android:layout_marginBottom="5dp"
            android:text="@string/profile_email_label"
            android:textSize="15sp"
            tools:text="Email:" />

        <TextView
            android:id="@+id/email_field"
            android:layout_width="200dp"
            android:layout_height="26dp"
            android:text="Email"
            android:textSize="15sp" />
    </LinearLayout>

    <!-- Age -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/age_label"
            android:layout_width="102dp"
            android:layout_height="26dp"
            android:text="@string/profile_age_label"
            android:textSize="15sp"
            tools:text="Email:" />

        <TextView
            android:id="@+id/age_field"
            android:layout_width="102dp"
            android:layout_height="26dp"
            android:text="26 (Mock)"
            android:textSize="15sp"
            tools:text="26 (Mock)" />
    </LinearLayout>

    <!-- Level -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/level_label"
            android:layout_width="102dp"
            android:layout_height="26dp"
            android:text="@string/profile_level_label"
            android:textSize="15sp"
            tools:text="Level:" />

        <Spinner
            android:id="@+id/level_field"
            android:layout_width="102dp"
            android:layout_height="26dp"
            android:layout_marginEnd="8dp"
            android:entries="@array/activity_profile_rank_list" />

        <ImageView
            android:id="@+id/level_information"
            android:clickable="true"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_level_information"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginEnd="8dp"
            tools:layout_editor_absoluteY="582dp"
            tools:layout_editor_absoluteX="205dp" />

    </RelativeLayout>


</LinearLayout>


